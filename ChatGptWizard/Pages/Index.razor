@page "/"
@using ChatGptWizard.Infrastructure.Context;
@using ChatGptWizard.Core.Interfaces;
@inject IMessageService _messageService;

    <div class="fixed bottom-6 left-0 right-0 flex flex-col items-center">
        <div class="mx-auto px-4 py-2 my-1">
            <PromptDrawer></PromptDrawer>
        </div>

        <div class="w-full mx-auto px-4 py-2 my-1">
            @*<p>@Message.Text.ToString()</p>*@
            <InputBox></InputBox>
        </div>

        <div class="max-w-screen-xl w-full mx-auto py-1">
            <Footer></Footer>
        </div>
    </div>

@code {
    public Message Message { get; set; }
    public List<Message> Messages { get; set; }
    protected override async Task OnInitializedAsync()
    {
        //Message = await _messageService.GetMessage(1);
        Messages = await _messageService.GetMessages();
    }
}