
<MudDrawer @bind-Open="SideBarOpen" Elevation="10">
    <MudDrawerHeader>
        <MudText Typo="Typo.h5" Color="Color.Default" Style="margin-top:15px; margin-left:5px;">ChatGpt Wizard</MudText>
    </MudDrawerHeader>
    <MudDivider DividerType="DividerType.Middle" Class="my-6" />
    <MudNavMenu>
        <MudNavGroup Title="Testing" Expanded="true" Color="Color.Dark">
            <MudNavLink Href="/list-messages" Match="NavLinkMatch.Prefix">Message List</MudNavLink>
            <MudNavLink Href="/api-key-input" Match="NavLinkMatch.Prefix">ApiKey Management</MudNavLink>
        </MudNavGroup>
    </MudNavMenu>
    <MudDivider DividerType="DividerType.Middle" Class="my-6" />
</MudDrawer>

@code {
    [Parameter]
    public bool SideBarOpen { get; set; }
}